---
import Layout from "../layouts/Layout.astro";
import {
  IconArrowRight,
  IconBrandGithub,
  IconBrandX,
  IconBrandInstagram,
  IconBrandTiktok
} from "@tabler/icons-react";
---

<Layout title="Welcome to our Links">
  <div class="flex flex-col w-full items-center gap-16">
    <a href="https://ruxwez.dev" target="_blank" rel="noopener noreferrer">
      <img class="w-16 aspect-square mt-16" src="/logo.webp" alt="Logo" />
    </a>
    <div class="flex flex-col max-w-xl w-full px-5 text-white gap-2">
      <a
        href="https://bravinta.com"
        target="_blank"
        rel="noopener noreferrer"
        class="border border-neutral-800 rounded-lg py-2 px-5 w-full min-h-16 flex items-center justify-between gap-2 transition-[padding,background] hover:pr-6 hover:bg-neutral-900"
      >
        <div class="flex gap-5 items-center font-semibold">
          <img src="/logo.webp" class="w-8 aspect-square" alt="Bravinta Logo" />
          <p>Our Website</p>
        </div>
        <IconArrowRight />
      </a>

      <hr class="my-3 mx-10 border-neutral-900" />
      <a
        href="https://github.com/bravinta"
        target="_blank"
        rel="noopener noreferrer"
        class="border border-neutral-800 rounded-lg py-2 px-5 w-full min-h-16 flex items-center justify-between gap-2 transition-[padding,background] hover:pr-6 hover:bg-neutral-900"
      >
        <div class="flex gap-5 items-center font-semibold">
          <IconBrandGithub />
          <p>Github</p>
        </div>
        <IconArrowRight />
      </a>
      <a
        href="https://x.com/itsbravinta"
        target="_blank"
        rel="noopener noreferrer"
        class="border border-neutral-800 rounded-lg py-2 px-5 w-full min-h-16 flex items-center justify-between gap-2 transition-[padding,background] hover:pr-6 hover:bg-neutral-900"
      >
        <div class="flex gap-5 items-center font-semibold">
          <IconBrandX />
          <p>X / Twitter</p>
        </div>
        <IconArrowRight />
      </a>
      <a
        href="https://instagram.com/itsbravinta"
        target="_blank"
        rel="noopener noreferrer"
        class="border border-neutral-800 rounded-lg py-2 px-5 w-full min-h-16 flex items-center justify-between gap-2 transition-[padding,background] hover:pr-6 hover:bg-neutral-900"
      >
        <div class="flex gap-5 items-center font-semibold">
          <IconBrandInstagram />
          <p>Instagram</p>
        </div>
        <IconArrowRight />
      </a>
      <a
        href="https://www.tiktok.com/@itsbravinta"
        target="_blank"
        rel="noopener noreferrer"
        class="border border-neutral-800 rounded-lg py-2 px-5 w-full min-h-16 flex items-center justify-between gap-2 transition-[padding,background] hover:pr-6 hover:bg-neutral-900"
      >
        <div class="flex gap-5 items-center font-semibold">
          <IconBrandTiktok />
          <p>TikTok</p>
        </div>
        <IconArrowRight />
      </a>
    </div>
  </div>
</Layout>
